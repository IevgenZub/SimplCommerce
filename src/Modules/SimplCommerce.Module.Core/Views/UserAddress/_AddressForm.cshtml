@model SimplCommerce.Module.Core.ViewModels.UserAddressFormViewModel

<div class="form-group row">
    <label class="col-sm-4 col-form-label">First Name</label>
    <div class="col-sm-8">
        <input asp-for="ContactName" placeholder="First Name" pattern="[A-Za-z]+" required  type="text" class="form-control">
    </div>
</div>
<div class="form-group row">
    <label class="col-sm-4 col-form-label">Last Name</label>
    <div class="col-sm-8">
        <input asp-for="AddressLine1" type="text" pattern="[A-Za-z]+" required placeholder="Last Name"  class="form-control">
    </div>
</div>
<div class="form-group row">
    <label class="col-sm-4 col-form-label">Birth Date</label>
    <div class="col-sm-8">
        <input asp-for="AddressLine2" type="date" class="form-control">
    </div>
</div>
<div class="form-group row">
    <label class="col-sm-4 col-form-label">Document #</label>
    <div class="col-sm-8">
        <input asp-for="City" type="text" required placeholder="Document No." pattern="[a-zA-Z0-9]+" class="form-control">
    </div>
</div>
<div class="form-group row">
    <label class="col-sm-4 col-form-label">Expiration</label>
    <div class="col-sm-8">
        <input asp-for="PostalCode" type="date" class="form-control">
    </div>
</div>
<div class="form-group row">
    <label class="col-sm-4 col-form-label">Email</label>
    <div class="col-sm-8">
        <input asp-for="Email" type="email" class="form-control">
    </div>
</div>

<div class="form-group row">
    <label class="col-sm-4 col-form-label">Phone</label>
    <div class="col-sm-8">
        <input asp-for="Mobile" type="tel" pattern="^[0-9\-\+\s\(\)]*$" required placeholder="Phone" class="form-control">
    </div>
</div>

<div class="form-group row">
    <label class="col-sm-4 col-form-label">Sex</label>
    <div class="col-sm-8">
        <select asp-for="Phone" asp-items="Model.SexTypes" class="form-control"></select>
    </div>
</div>


<div class="form-group row">
    <label class="col-sm-4 col-form-label">@Localizer["Country"]</label>
    <div class="col-sm-8">
        <select asp-for="CountryId" asp-items="Model.Countries" class="form-control"></select>
    </div>
</div>

<div class="form-group row">
    <div class="offset-md-4 col-md-8">
        <button type="submit" class="btn btn-primary">@Localizer["Save"]</button>
        <a href="~/user/address" class="btn btn-secondary">@Localizer["Cancel"]</a>
    </div>
</div>