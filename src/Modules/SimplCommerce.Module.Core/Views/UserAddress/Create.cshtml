@model SimplCommerce.Module.Core.ViewModels.UserAddressFormViewModel
@{
    ViewData["Title"] = "Create Passenger";
}

<div class="row">
    <div class="col-md-3">
        @Html.Partial("_AccountMenu")
    </div>
    <div class="col-md-9">
        <h2>Create Passenger</h2>
        <hr />
        <form asp-controller="UserAddress" asp-action="Create" method="POST" class="form-horizontal">
            @Html.Partial("~/Modules/SimplCommerce.Module.Core/Views/UserAddress/_AddressForm.cshtml", Model)
        </form>
    </div>
</div>

@section scripts {
@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
<script src="~/modules/core/user-address.js"></script>
}