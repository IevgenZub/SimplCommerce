@model SimplCommerce.Module.Catalog.ViewModels.ProductThumbnail

<div class="thumbnail" style="overflow: hidden; margin:10px 20px;">

    <div class="row-fluid">
    <div class="col-md-6 col-sm-6">

       <div class="col-md-3 col-xs-3 caption">
           <img alt="@Model.Name" src="@Model.ThumbnailUrl" style="max-width: 60px; min-width: 60px;">
        </div>
        <div class="col-md-9 col-xs-9">
            <h4 class="product-name">@Model.Name</h4>
            <p class="product-price">
                <label>
                <input type="radio" name="selectTrip" id="selectTrip">
                    @if (Model.IsCallForPricing)
                    {
                        @Localizer["Call for pricing"]
                    }
                    else
                    {
                        @Model.CalculatedProductPrice.Price.ToString("C")
                        if (Model.CalculatedProductPrice.PercentOfSaving > 0)
                        {
                            <span class="product-price-saving">-@(Model.CalculatedProductPrice.PercentOfSaving)%</span>
                            <br />
                            <span class="product-price-regular">@Model.CalculatedProductPrice.OldPrice.Value.ToString("C")</span>
                        }
                    }
                </label>
            </p>
        </div>

        <div class="col-md-12 col-xs-12 caption">
            <p><b>Departure:</b> @Model.Departure @Model.DepartureDate</p>
            <p><b>Landing:</b> @Model.Landing @Model.LandingDate</p>
        </div>
    </div>


    @if (Model.IsRoundTrip.Value)
    {
    <div class="col-md-6 col-sm-6">
        <div class="col-md-3 col-xs-3 caption">
            <img alt="@Model.ReturnFlightNumber" src="@Model.ThumbnailUrl" style="max-width: 60px; min-width: 60px;">
        </div>
        <div class="col-md-9 col-xs-9">
            <h4 class="product-name">@Model.ReturnFlightNumber</h4>
        </div>

        <div class="col-md-12 col-xs-12 caption">
            <p><b>Departure:</b> @Model.Landing @Model.ReturnDepartureDate</p>
            <p><b>Landing:</b> @Model.Departure @Model.ReturnLandingDate</p>
        </div>
    </div>
    }
    <div class="col-md-12 col-sm-12">
        <div class="col-md-6 col-sm-6">
            <a class="moreDetails">More Details</a>
        </div>
    </div>

    </div>


    <div class="product-details" style="display: none;">
        <div class="col-md-6 col-sm-6">
            <h4>Product Details</h4>
        </div>
        <div class="col-md-6 col-sm-6"></div>
    </div>


</div>